    "version": "0.2.0",
    "configurations": [
        {
            "name": "measure-text-pixel-size-pdf",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/examples/pangomm/build/measure-text-pixel-size-pdf",
            "args": ["../unicode-text.txt", "Noto Sans Mono CJK TC"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/examples/pangomm/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}